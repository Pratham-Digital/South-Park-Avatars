<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rpg.southparkavatars.MenuActivity"
    android:background="@drawable/sp_background"

    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/text2"
        android:id="@+id/imageView2"
        android:layout_marginTop="40dp"/>



    <Button
        android:text="Shirt"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:id="@+id/createShirt"
        android:background="@drawable/button_change"
        android:textColor="#fff"
        android:onClick="ButtonOnClick"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/text" />

    <Button
        android:text="Pants"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:id="@+id/createPants"
        android:onClick="ButtonOnClick"
        android:background="@drawable/button_change"
        android:textColor="#fff"
        android:layout_below="@+id/createShirt"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@+id/createShirt" />

    <Button
        android:text="Hat"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@+id/createPants"
        android:layout_gravity="center"
        android:layout_alignStart="@+id/createPants"
        android:background="@drawable/button_change"
        android:gravity="center"
        android:onClick="ButtonOnClick"
        android:layout_marginTop="30dp"
        android:id="@+id/createHat"
        android:textColor="#fff" />



</LinearLayout>
