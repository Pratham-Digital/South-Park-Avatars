<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sp_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.rpg.southparkavatars.MenuActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/text" />

    <Button
        android:id="@+id/createCharacter"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/text"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_change"
        android:onClick="onPlayButtonClick"
        android:text="Create character"
        android:textColor="#fff" />

    <Button
        android:id="@+id/createClothing"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/createCharacter"
        android:layout_below="@+id/createCharacter"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_change"
        android:onClick="onCreateClothingButtonClick"
        android:text="Create clothing"
        android:textColor="#fff" />

    <Button
        android:id="@+id/loadCharacters"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/createClothing"
        android:layout_below="@+id/createClothing"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_change"
        android:gravity="center"
        android:text="Load character"
        android:textColor="#fff" />

    <Button
        android:id="@+id/statistics"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/loadCharacters"
        android:layout_below="@+id/loadCharacters"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_change"
        android:text="Statistics"
        android:textColor="#fff" />
</LinearLayout>
