<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.rpg.southparkavatars.PlayActivity">

    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textAlignment="center"
            android:textSize="26dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/accessory_2_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:src="@drawable/accessories_10" />

    <ImageView
        android:id="@+id/body_image"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_below="@id/name_layout"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:src="@drawable/white_character" />

    <ImageView
        android:id="@+id/pants_image"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="345dp"
        android:src="@drawable/pants_1" />

    <ImageView
        android:id="@+id/necklace_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp"
        android:src="@drawable/necklace_4" />

    <ImageView
        android:id="@+id/hat_image"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/hat_3" />

    <LinearLayout
        android:id="@+id/tab_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/skinColor_tab_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onButtonClick"
                    android:text="Skin" />

                <Button
                    android:id="@+id/hair_tab_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onButtonClick"
                    android:text="Hair" />

                <Button
                    android:id="@+id/mouth_tab_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onButtonClick"
                    android:text="Mouth" />

                <Button
                    android:id="@+id/beard_tab_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onButtonClick"
                    android:text="Beard" />

                <Button
                    android:id="@+id/eye_tab_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onButtonClick"
                    android:text="Eye" />

                <Button
                    android:id="@+id/shirt_tab_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onButtonClick"
                    android:text="Shirt" />

                <Button
                    android:id="@+id/glasses_tab_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onButtonClick"
                    android:text="Glasses" />

                <Button
                    android:id="@+id/necklace_tab_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onButtonClick"
                    android:text="Necklace" />

                <Button
                    android:id="@+id/pants_tab_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onButtonClick"
                    android:text="Pants" />

                <Button
                    android:id="@+id/hat_tab_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onButtonClick"
                    android:text="Hat" />

                <Button
                    android:id="@+id/accessories_1_tab_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onButtonClick"
                    android:text="Accessory 1" />

                <Button
                    android:id="@+id/accessories_2_tab_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onButtonClick"
                    android:text="Accessory 2" />

                <Button
                    android:id="@+id/background_tab_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onButtonClick"
                    android:text="Background" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/play_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" />
</RelativeLayout>
